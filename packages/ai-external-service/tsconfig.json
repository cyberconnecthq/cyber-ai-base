{
    "compilerOptions": {
        "rootDir": ".",
        "module": "ESNext",
        "moduleResolution": "node",
        "types": ["node"],
        "composite": false,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        "lib": ["dom", "DOM.Iterable", "ESNext"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "noEmit": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
